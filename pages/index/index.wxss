/* pages/index/index.wxss */
.banner {
    width: 100%;
    height: 300rpx;
}

.banner image {
    height: 100%;
    width: 100%;
}

/* 图标导航区域 */
.navContainer {
    display: flex;
}

.navItem {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 20%;
}

.navItem .iconfont {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background-color: rgb(240, 19, 19);
    line-height: 100rpx;
    text-align: center;
    font-size: 50rpx;
    margin: 20rpx 0;
    color: #fff;
}

.navItem text {
    font-size: 26rpx;
}

/* 推荐歌曲 */
.recommendContainer {
    padding: 20rpx;
}

/* 推荐内容区域 */
.scrollItem {
    width: 200rpx;
    margin-right: 20rpx;
}

.scrollItem image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.recommendScroll {
    display: flex;
    height: 300rpx;
}

.recommendScroll text {
    font-size: 26rpx;
    /* 单行文本溢出隐藏 省略号代替 */
    /*     display: block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis; */

    /* 多行文本溢出隐藏 省略号代替 */
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    /* 设置对其模式 */
    -webkit-box-orient: vertical;
    /* 设置多行行数 */
    -webkit-line-clamp: 2;

}

/* 排行榜 */
.topList {
    padding: 20rpx;
}

.topSwiper {
    height: 400rpx;

}

.swiperItem .title {
    font-size: 30rpx;
    line-height: 80rpx;
}

.swiperItem {
    width: 96%;
    background-color: #fbfbfb;
}

.musicItem {
    display: flex;
    margin-bottom: 20rpx;

}

.swiperItem image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 10rpx;
}

.swiperItem .order {
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
}

.swiperItem .topName {
    height: 100rpx;
    line-height: 100rpx;
    max-width: 400rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}